<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="159dp"
        app:srcCompat="@drawable/cast_album_art_placeholder"
        android:id="@+id/imageView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:hint="Name"
        android:ems="10"
        android:id="@+id/nameLabel" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailLabel"
        android:text="Email"
        android:hint="Email"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordLabel"
        android:text="password"
        android:hint="Password"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phoneLabel"
        android:text="0123456789"
        android:hint="Phone"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Bookings"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:onClick="clickedMyBookings"
        android:id="@+id/bookingButton" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Listed Spaces"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:id="@+id/myListedSpacesButton"
        android:onClick="clickedMyListedSpaces" />

    <Button
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:text="Edit Profile"
        android:id="@+id/editButton"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:text="Save"
        android:id="@+id/saveButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:text="Verification"
        android:id="@+id/verificationButton"
        android:onClick="clickedVerification" />

</LinearLayout>
