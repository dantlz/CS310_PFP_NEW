<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cancel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pfp.parkhere.CancelActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to cancel?"
        android:textSize="10pt"
        android:textAlignment="center"
        android:id="@+id/CancelText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    </TextView>

    <Button
        android:text="Confirm Cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ConfirmCancelButton"
        android:layout_below="@+id/CancelText"
        android:layout_alignParentStart="true"
        android:onClick="CancelBooking"/>
</RelativeLayout>
