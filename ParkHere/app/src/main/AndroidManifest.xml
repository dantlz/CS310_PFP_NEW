<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pfp.parkhere">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera2" />

    <application
        android:name=".Global_ParkHere_Application"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="ParkHere"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--
             The API key for Google Maps-based APIs is defined as a string resource.
             (See the file "res/values/google_maps_api.xml").
             Note that the API key is linked to the encryption key used to sign the APK.
             You need a different API key for each encryption key, including the release key that is used to
             sign the APK for publishing.
             You can define the keys for the debug and release targets in src/debug/ and src/release/. 
        -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- ADD SPACE -->
        <activity
            android:name=".AddSpaceActivity"
            android:label="List your space"/>

        <!-- BOOK SPACE -->
        <activity android:name=".BookSpaceActivity"
            android:label="Book a space">
        </activity>

        <!-- Cancel -->
        <activity android:name=".CancelActivity"
            android:label="Cancel this booking"/>

        <!-- EDIT SPACE -->
        <activity android:name=".EditListedSpacesActivity"
            android:label="Edit this listed space"/>

        <!-- LOGIN -->
        <activity
            android:name=".LoginActivity"
            android:label="ParkHere" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MAPS -->
        <activity
            android:name=".MapsActivity"
            android:label="ParkHere"/>

        <!-- MY BOOKINGS -->
        <activity android:name=".MyBookingsActivity"
            android:label="All bookings"/>

        <!-- MY BOOKINGS DETAIL -->
        <activity
            android:name=".MyBookingsDetailsActivity"
            android:label="Booking Details"
            android:theme="@style/AppTheme" />

        <!-- MY LISTED SPACES -->
        <activity
            android:name=".MyListedSpacesActivity"
            android:label="All listed spaces"
            android:theme="@style/AppTheme" />

        <!-- MY LISTED SPACE DETAIL -->
        <activity
            android:name=".MyListedSpacesDetailsActivity"
            android:label="Listed Space Details"/>

        <!-- PROFILE -->
        <activity
            android:name=".ProfileActivity"
            android:label="Profile"/>

        <!-- REGISTER -->
        <activity
            android:name=".RegisterActivity"
            android:label="Register" />

        <!-- VERIFICATION -->
        <activity
            android:name=".VerificationActivity"
            android:label="Verification" />

        <activity android:name=".BecomeBothOwnerAndSeeker"
            android:label="Become both an owner and a seeker"/>
        <activity android:name=".SearchFiltersActivity"
            android:label="Set your search filters"/>
        <activity android:name=".PayWithCardActivity"
            android:label="Paying with card"/>
        <activity android:name=".PayWithPaypalActivity"
            android:label="Paying with PayPal"/>
    </application>

</manifest>